<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/holo_blue_bright" />
    <TextView
        android:id="@+id/student_name"
        android:text="Trịnh Tấn Hào"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Hiển thị mã số sinh viên -->
    <TextView
        android:id="@+id/student_id"
        android:text="MSSV: 22110315"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập chuỗi ở đây"
        android:inputType="text"/>
    <Button
        android:id="@+id/btnReverse"
        android:text="Đảo ngược và In Hoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <!-- TextView để hiển thị chuỗi sau khi thay đổi -->
    <TextView
        android:id="@+id/resultText"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
